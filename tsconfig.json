{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./src",
    "outDir": "./dist/ts",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020", "dom"]
  },
  "include": ["src/decl/*.d.ts"]
}
